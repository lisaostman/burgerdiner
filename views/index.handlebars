<div class="center red"> <h1>Burgers!</h1> </div>

<div class="container"> 
<div class="row">
  <div class="col-md-6"> 
    <div class="center">
<h2>Burgers To Be Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <img src="tobe.png" width="50px">
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div> 
<div class="col-md-6"> 

<div class="center ">
<h2>Burgers You Ate!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <img src="happyeaten.png" width="50px">
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>

</div>
</div>

<div class="center red fixed-bottom">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="sleepy">Hungry?</label><br>
    <input type="radio" name="devoured" value="1" checked> To Be Eaten!<br>
    <input type="radio" name="devoured" value="0"> Eaten!
  </div>

  <button type="submit">Make Burger</button>
</form>
 </div>
